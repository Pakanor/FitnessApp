<Window x:Class="Programowanie.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły Produktu" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Produkt:" FontSize="16" FontWeight="Bold"/>
            <TextBlock Name="ProductNameTextBlock" FontSize="14" Margin="0,5,0,10"/>

            <TextBlock Text="Wpisz ilość (gramy):" FontSize="14"/>
            <TextBox Name="GramsTextBox" Margin="0,5,0,10"/>

            <Button Content="Zatwierdź" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
